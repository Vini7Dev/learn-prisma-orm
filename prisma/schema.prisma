generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id            String    @id @default(uuid())
  name          String    @unique
  description   String?
  duration      Int
  teacher       Teachers  @relation(fields: [fk_id_teacher], references: [id])
  fk_id_teacher String    @unique
  modules       Modules[]
  created_at    DateTime  @default(now())

  @@map("courses")
}

model Teachers {
  id     String   @id @default(uuid())
  name   String   @unique
  course Courses?

  @@map("teachers")
}

model Modules {
  id           String   @id @default(uuid())
  name         String   @unique
  description  String
  fk_id_course String
  course       Courses  @relation(fields: [fk_id_course], references: [id])
  created_at   DateTime @default(now())

  @@map("modules")
}
